# Root .env file - Shared between backend and frontend
NODE_ENV=development

# Backend Configuration
PORT=3000

# Database Configuration
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=quotes_app
DATABASE_URL=postgresql://postgres:password@db:5432/quotes_app

# pgAdmin Configuration (optional)
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5d

# Frontend Configuration (Vite requires VITE_ prefix for client-side access)
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_TITLE=Quotes Application
