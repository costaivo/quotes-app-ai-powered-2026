{
  "css.customData": [
    {
      "version": 1.1,
      "atDirectives": [
        {
          "name": "@apply",
          "description": "Use @apply to inline any existing utility classes into your own custom CSS.",
          "references": [
            {
              "name": "Tailwind CSS Documentation",
              "url": "https://tailwindcss.com/docs/functions-and-directives#apply"
            }
          ]
        },
        {
          "name": "@theme",
          "description": "Define custom theme values in Tailwind CSS v4.",
          "references": [
            {
              "name": "Tailwind CSS v4 Documentation",
              "url": "https://tailwindcss.com/docs/v4-beta"
            }
          ]
        },
        {
          "name": "@custom-variant",
          "description": "Define custom variants in Tailwind CSS v4.",
          "references": [
            {
              "name": "Tailwind CSS v4 Documentation",
              "url": "https://tailwindcss.com/docs/v4-beta"
            }
          ]
        },
        {
          "name": "@layer",
          "description": "Use the @layer directive to tell Tailwind which 'bucket' a set of custom styles belong to.",
          "references": [
            {
              "name": "Tailwind CSS Documentation",
              "url": "https://tailwindcss.com/docs/functions-and-directives#layer"
            }
          ]
        }
      ]
    }
  ],
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  }
}
